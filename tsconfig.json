{
    "compilerOptions": {
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "allowJs": true,
        "target": "es5",
        "outDir": ".build",
        "moduleResolution": "node",
        "lib": [
            "es2015"
        ],
        "rootDir": "./",
        "baseUrl": "./src",
        "paths": {
            "@utils/*": [
                "./utilities/*"
            ],
            "@services/*": [
                "./services/*"
            ],
            "@controllers/*": [
                "./controllers/*"
            ],
            "@ts-types/*": [
                "./types/*"
            ],
            "@middlewares/*": [
                "./middlewares/*"
            ]
        }
    }
}